<div class="container">
  <!--Heading-->
  <header class="row">
    <div class="col">
      <h1>Eat Da Burger</h1>
    </div>
    <div class="col">
      <img src="/assets/img/eat-da-burger-bust.svg" alt="A guy stuffing his face with a burger">
    </div>
    <div class="col">
      <form id="add-burger">
      <label for="burger-name">Burger name:</label>
      <input type="text" id="burger-name" name="burger-name" maxlength="75">

      <button type="submit">Submit Burger</button>
    </form>
    </div>
  </header>
  <!--Main-->
  <main class="row">
    <div class="col">
      <h2>Burgers To Be Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li data-id="{{id}}" data-newdevoured="true">
          Burger Name: {{burger_name}}
          Devoured: {{devoured}}
          <button class="devour">Devour!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          Burger Name: {{burger_name}}
          Devoured: {{devoured}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </main>
</div>